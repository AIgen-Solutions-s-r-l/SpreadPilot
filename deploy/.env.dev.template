# deploy/.env.dev.template
# Template for Development Environment Variables
# Variables marked with "(Secret Manager)" should be stored in GCP Secret Manager
# with the name format: <secret-name>:latest (e.g., firebase-sa:latest)

# --- General ---
ENV=dev
GCP_PROJECT=  # Development GCP project ID

# --- Admin API ---
# FIREBASE_SERVICE_ACCOUNT= (Secret Manager: firebase-sa:latest)
ADMIN_API_BASE_URL=  # Development Admin API Cloud Run URL

# --- Trading Bot ---
# IBKR_ACCOUNT= (Secret Manager: ibkr-account:latest)
# IBKR_PASSWORD= (Secret Manager: ibkr-password:latest)
# TELEGRAM_BOT_TOKEN= (Secret Manager: telegram-token:latest)
# TELEGRAM_CHAT_ID=  # Development Telegram chat ID (or use Secret Manager)

# --- Report Worker ---
# SENDGRID_API_KEY= (Secret Manager: sendgrid-key:latest)
# REPORT_RECIPIENT_EMAIL=  # Development report recipient email
# MinIO/S3 Configuration (Optional - for report storage)
# MINIO_ENDPOINT_URL=  # Development MinIO/S3 endpoint URL
# MINIO_ACCESS_KEY= (Secret Manager: minio-access-key:latest)
# MINIO_SECRET_KEY= (Secret Manager: minio-secret-key:latest)
# MINIO_BUCKET_NAME=spreadpilot-reports-dev
# MINIO_REGION=us-east-1
# MINIO_SECURE=true

# --- Alert Router ---
# (Uses TELEGRAM_BOT_TOKEN from Trading Bot section)
ALERT_ROUTER_TELEGRAM_CHAT_ID=  # Development alert Telegram chat ID

# --- Watchdog ---
# (Uses TELEGRAM_BOT_TOKEN from Trading Bot section)
WATCHDOG_TELEGRAM_CHAT_ID=  # Development watchdog Telegram chat ID

# --- Frontend ---
REACT_APP_API_URL=  # Development Admin API URL (must match ADMIN_API_BASE_URL)

# --- Add other service-specific variables as needed ---
# MongoDB Credentials
MONGO_INITDB_ROOT_USERNAME=  # Development MongoDB root username
MONGO_INITDB_ROOT_PASSWORD=  # Development MongoDB root password