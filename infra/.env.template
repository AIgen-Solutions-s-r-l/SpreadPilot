# SpreadPilot Infrastructure Environment Variables
# Copy this file to .env and customize the values

# PostgreSQL Configuration
POSTGRES_PASSWORD=  # PostgreSQL root password

# Vault Configuration
VAULT_ROOT_TOKEN=  # HashiCorp Vault root token

# MinIO Configuration
MINIO_ROOT_USER=  # MinIO root username
MINIO_ROOT_PASSWORD=  # MinIO root password

# Traefik Configuration
ACME_EMAIL=  # Email for Let's Encrypt certificates

# Application Secrets (will be stored in Vault)
IB_USER=  # Interactive Brokers username
IB_PASS=  # Interactive Brokers password
SMTP_URI=  # SMTP URI format: smtp://<user>:<pass>@<host>:<port>
TELEGRAM_TOKEN=  # Telegram bot token

# Generated secrets (leave empty to auto-generate)
MINIO_ACCESS_KEY=
MINIO_SECRET_KEY=
DB_PASSWORD=
JWT_SECRET=
API_KEY=