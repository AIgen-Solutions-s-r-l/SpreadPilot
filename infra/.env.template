# SpreadPilot Infrastructure Environment Variables
# Copy this file to .env and customize the values

# PostgreSQL Configuration
POSTGRES_PASSWORD=spreadpilot_secure_password

# Vault Configuration
VAULT_ROOT_TOKEN=your-secure-vault-token-here

# MinIO Configuration
MINIO_ROOT_USER=admin
MINIO_ROOT_PASSWORD=minio-secure-password

# Traefik Configuration
ACME_EMAIL=your-email@example.com

# Application Secrets (will be stored in Vault)
IB_USER=your-ib-username
IB_PASS=your-ib-password
SMTP_URI=smtp://user:password@smtp.example.com:587
TELEGRAM_TOKEN=your-telegram-bot-token

# Generated secrets (leave empty to auto-generate)
MINIO_ACCESS_KEY=
MINIO_SECRET_KEY=
DB_PASSWORD=
JWT_SECRET=
API_KEY=