# Traefik Configuration Template
# Copy this file to .env and update with your values

# Domain configuration
DOMAIN=example.com

# ACME email for Let's Encrypt certificates
ACME_EMAIL=admin@example.com

# Traefik dashboard authentication (user:password)
# Default: admin:admin (bcrypt hash)
# Generate new hash: htpasswd -nb -B username password | sed -e s/\\$/\\$\\$/g
TRAEFIK_AUTH=admin:$$2y$$10$$8fmHMC0Y0n3Y3ZvPxof6e.CQB9XxejqYwV7DlRcUoKSUqzM0MjEKm

# Admin API Configuration
ADMIN_USERNAME=admin
ADMIN_PASSWORD_HASH=  # Generate with admin-api/generate_hash.py
JWT_SECRET=your-secret-key-here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=1440

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:8080,https://dashboard.example.com

# MongoDB Configuration
MONGO_URI=mongodb://mongodb:27017
MONGO_DB_NAME=spreadpilot_admin

# Google Cloud Configuration (if needed)
GOOGLE_CLOUD_PROJECT=spreadpilot-dev

# OpenTelemetry Configuration (optional)
OTEL_EXPORTER_OTLP_ENDPOINT=http://otel-collector:4317